{
  "private": true,
  "name": "sem",
  "version": "1.0.0",
  "description": "SEM桌面应用",
  "author": "jyying <jinyuy@seentao.com>",
  "main": "electron.js",
  "scripts": {
    "build": "max build",
    "build-prod": "max build",
    "build-proe": "max build",
    "build-test": "max build",
    "dev": "max dev",
    "format": "prettier --cache --write .",
    "postinstall": "max setup",
    "prepare": "husky",
    "setup": "max setup",
    "start": "npm run dev",
    "electron:dev": "electron ./electron.js",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@ant-design/icons": "5.0.1",
    "@ant-design/pro-components": "2.4.4",
    "@antv/g6": "4.8.21",
    "@antv/x6": "1.34.6",
    "@microsoft/fetch-event-source": "2.0.1",
    "@types/lodash-es": "4.17.12",
    "@types/react-pdf": "4.0.6",
    "@types/react-syntax-highlighter": "15.5.13",
    "@umijs/max": "4.4.6",
    "ahooks": "3.8.0",
    "antd": "5.12.2",
    "antd-mobile": "^5.39.0",
    "antd-mobile-icons": "^0.3.0",
    "axios": "^1.8.4",
    "classnames": "2.5.1",
    "dayjs": "1.11.10",
    "docx-preview": "0.3.2",
    "dva": "^2.4.1",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "handsontable": "14.5.0",
    "highlight.js": "11.10.0",
    "html2canvas": "1.4.1",
    "js-audio-recorder": "1.0.7",
    "js-base64": "3.7.7",
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "marked": "14.1.2",
    "moment": "^2.30.1",
    "nanoid": "5.0.7",
    "qs": "6.12.3",
    "react-beautiful-dnd": "13.1.1",
    "react-doc-viewer": "0.1.14",
    "react-json-view": "1.21.3",
    "react-markdown": "9.0.1",
    "react-pdf": "4.1.0",
    "react-player": "2.16.0",
    "react-speech-recognition": "3.10.0",
    "react-syntax-highlighter": "15.5.0",
    "rehype-highlight": "7.0.0",
    "seent-tools": "^0.0.47",
    "typewriter-effect": "2.21.0"
  },
  "devDependencies": {
    "@types/lodash": "4.17.7",
    "@types/qs": "6.9.15",
    "@types/react": "18.0.33",
    "@types/react-beautiful-dnd": "13.1.8",
    "@types/react-dom": "18.0.11",
    "husky": "9",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "3.2.2",
    "prettier-plugin-packagejson": "2.4.3",
    "typescript": "5.0.3",
    "electron": "28.2.4",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.seentao.sem",
    "productName": "SEM",
    "files": [
      "dist/**",
      "electron.js",
      "!**/*.md",
      "!**/*.log",
      "!**/tests/**",
      "!**/test/**",
      "!src/",
      "!node_modules/*/{test,__tests__,examples}/**"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
